# Application Settings
APP_NAME=AutoLister
APP_VERSION=1.0.0
DEBUG=false

# Scraping Configuration
SCRAPING_INTERVAL_HOURS=6
MAX_RESULTS_PER_SEARCH=20
USER_AGENT=AutoLister/1.0
REQUEST_TIMEOUT=30

# Google Custom Search API
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CX=your_google_custom_search_engine_id_here

# Bing Search API
BING_API_KEY=your_bing_api_key_here

# Groq API (for AI-based PDF metadata extraction and scrape job configuration generation)
# Get a free API key from https://console.groq.com/
# Required for the AI Generate feature in the Scrape Queue to automatically generate search configurations
GROQ_API_KEY=your_groq_api_key_here

# Etsy API Credentials
ETSY_API_KEY=your_etsy_api_key_here
ETSY_API_SECRET=your_etsy_api_secret_here
ETSY_ACCESS_TOKEN=your_etsy_access_token_here
ETSY_ACCESS_TOKEN_SECRET=your_etsy_access_token_secret_here
ETSY_SHOP_ID=your_etsy_shop_id_here

# Processing Settings
MAX_PDF_SIZE_MB=50
IMAGE_DPI=150
IMAGE_FORMAT=jpeg
MAIN_IMAGE_PAGE=1
ADDITIONAL_IMAGE_PAGES=2,3,4

# Database
DATABASE_PATH=./data/autolister.db

# Dashboard
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8000

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/autolister.log
